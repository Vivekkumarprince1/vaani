
# Azure Translator Configuration
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=your_azure_translator_region_here
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/

# Microsoft Azure Speech to Text Configuration
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_speech_region_here
AZURE_SPEECH_ENDPOINT=https://your_azure_speech_endpoint_here

# Server Configuration
NODE_ENV=development
PORT=2000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=86400000

# MongoDB Connection - choose one of these options
# Local MongoDB
MONGO_URI=mongodb://localhost:27017/vani

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=30000
SOCKET_PING_INTERVAL=25000

# Logging Configuration
LOG_LEVEL=info
