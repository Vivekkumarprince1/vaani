# Example environment file for backend
# Copy this to .env and fill in real values. Do NOT commit your real .env.

# API URL for client-side requests
NEXT_PUBLIC_API_URL=/api

# Socket.IO Server URL
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# Azure Translator Configuration
AZURE_TRANSLATOR_KEY=YOUR_AZURE_TRANSLATOR_KEY
AZURE_TRANSLATOR_REGION=YOUR_AZURE_REGION
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/

# Microsoft Azure Speech to Text Configuration
AZURE_SPEECH_KEY=YOUR_AZURE_SPEECH_KEY
AZURE_SPEECH_REGION=YOUR_AZURE_REGION
AZURE_SPEECH_ENDPOINT=https://<region>.api.cognitive.microsoft.com/sts/v1.0/issuetoken

# Server Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=86400000

# MongoDB Connection (use a safe URI without plaintext credentials)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/mydb?retryWrites=true&w=majority

# CORS Configuration
ALLOWED_ORIGINS=https://example.com
ALLOW_ALL_CORS=false

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=30000
SOCKET_PING_INTERVAL=25000

# Logging Configuration
LOG_LEVEL=info
